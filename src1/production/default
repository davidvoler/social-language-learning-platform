#nginx site-enabled/default

upstream backend  {
  server localhost:8800;
  server localhost:8801;
  server localhost:8802;
  server localhost:8803;
}
server {
        listen 80 default_server;
        listen [::]:80 default_server ipv6only=on;
        listen 443 ssl;
        root /usr/share/nginx/html;
        index index.html index.htm;

        # Make site accessible from YOUR_SERVER_NAME
        server_name YOUR_SERVER_NAME;

        server_name ate-monitor.crow.local;
        ssl_certificate /etc/nginx/ssl/nginx.crt;
        ssl_certificate_key /etc/nginx/ssl/nginx.key;

        location / {
            proxy_pass  http://backend;
        }
        location /static {
            alias /PATH_TO_LOCATION/social-language-learning-platform/src/client;
        }
}


